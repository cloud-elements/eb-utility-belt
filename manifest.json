{
  "manifest_version": 2,
  "name": "EB Utility Belt",
  "icons": {
    "128": "/resources/favicon.png"
  },
  "description": "This extention provides various utilities to augment Element Building",
  "version": "1.0",
  "browser_action": {
    "default_icon": "/resources/favicon.png",
    "default_popup": "/html/login.html"
  },
  "background": {
    "scripts": ["/js/manifest/background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://api.cloud.elements.co.uk/",
    "https://api.cloud.elements.com/",
    "https://staging.cloud.elements.com/",
    "https://snapshot.cloud.elements.com/"
  ]
}